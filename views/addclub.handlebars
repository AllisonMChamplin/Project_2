<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">Make Club</h5>
                    <div class="user-info">Username: {{username}}&nbsp;&nbsp;&nbsp;| &nbsp;&nbsp;&nbsp;User ID: {{userid}}<br><br></div>
                    <form class="clearfix mb-4" action="POST">
                        <div class="form-group">
                            <label for="newclub-clubname">Club Name</label>
                            <input type="text" id="newclub-clubname" class="form-control"
                                aria-describedby="newclub-clubname" placeholder="Enter club name">
                        </div>
                        <div class="form-group">
                            <label for="newclub-description">description
                                
                            </label>
                            <input type="text" id="newclub-description" class="form-control"
                                aria-describedby="newclub-description" placeholder="Enter description">
                        </div>
                        <button id="submit" class="btn btn-primary float-right">Submit</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/addclub.js"></script>