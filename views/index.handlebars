<div id="home">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1>Discover the Club that fits you</h1>
        <h2>Welcome to our app</h2>
        <p>Lorum Ipsum</p>
        <br><br>
        <br><br>
      </div>
    </div>
  <div class="row">
      <!-- Search form -->
      <div class="col-md 8">
      <form class="form-inline ">
        <i class="fas fa-search" aria-hidden="true"></i>
        <input class="form-control form-control-md ml-8 w-100" type="text" placeholder="Search Clubs eg.. Titles, Genres, Authors, "
          aria-label="Search">
      </form>
    </div>
  </div>
  <br>
  <br>
  <br>
  <br>
  <div class="row">
    <div class="col-md-6">
      <h3 class="text-center">Popular Clubs</h3>
        <div>
          
          {{#each Popclubs}}
            <div class="row">
             <a href="/clubs/{{this.id}}">{{this.clubname}}</a>
              <p>{{this.userCount}}</p>
            </div>
          {{/each}}
        </div>
    </div>
    <div class="col-md-6">
      <h3 class="text-center">Recently Published Clubs</h3>
      <div>
          
          {{#each clubs}}
            <div class="row">
              <a href="/clubs/{{this.id}}">{{this.clubname}}</a>
              <br> {{this.createdAT}}
            </div>
          {{/each}}
    </div>
  </div>
  </div>
</div>

